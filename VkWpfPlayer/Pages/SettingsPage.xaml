<Window x:Class="VkWpfPlayer.Pages.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VkWpfPlayer.Pages"
      mc:Ignorable="d"  Background="White"
      Title="SettingsPage" Height="634.4" Width="492.8">

    <Grid>
        <ScrollViewer>
            <StackPanel  VerticalAlignment="Center" HorizontalAlignment="Center">
                <StackPanel>
                    <Label   Content="Радиус края:"></Label>
                    <Border BorderBrush="{DynamicResource VKImageBorderColor}" BorderThickness="{DynamicResource VKImageBorderThickness}" HorizontalAlignment="Center"   Width="120" Height="120"  CornerRadius="{DynamicResource VKImageCornerRadius}" Margin="10,20,0,0">
                        <Border.Background>
                            <ImageBrush ImageSource="/Resources/MusicIcon.jpg"/>
                        </Border.Background>

                    </Border>
                    <Label Name="RadiusRoundValue" Content="Значение: 10"></Label>
                    <Slider  x:Name="RoundImageSlider" HorizontalAlignment="Stretch"   ValueChanged="RoundImageSlider_ValueChanged" Maximum="100" Margin="0,-2,0,0" Minimum="1" SmallChange="1" Value="10"/>

                    <StackPanel>
                       
                        <Label x:Name="BorderThicknessLabel" Content="Толщина обводки  картинки:0"></Label>
                        <Slider x:Name="BorderThicknessSlider"  ValueChanged="BorderThicknessSlider_ValueChanged"></Slider>
                        
                    </StackPanel>
                </StackPanel>
                <StackPanel>
                    <Label  Content="Радиус кнопок и полей ввода"></Label>
                    <StackPanel Orientation="Horizontal" Margin="10,0,0,0">
                        <Button Style="{DynamicResource ButtonStyleRect}" Height="40"  Content="Пример текста"></Button>
                        <TextBox Style="{DynamicResource TextBoxStyleRect}" Width="150" Margin="20,0,0,0" Height="25"></TextBox>
                    </StackPanel>
                    <Label  x:Name="ButtonRoundRadiusTextBlock"  Content="Значение: 10"></Label>
                    <Slider x:Name="ButtonRoundRadiusSlider"    HorizontalAlignment="Stretch"   ValueChanged="ButtonRoundRadiusSlider_ValueChanged" Maximum="100" Margin="0,-2,0,0" Minimum="1" SmallChange="1">
                        
                    </Slider>


                </StackPanel>
                <StackPanel Orientation="Vertical">
                    <StackPanel Orientation="Horizontal">
                        <Label  Content="Цвет текста:" Width="200"></Label>
                        <TextBox x:Name="TextColoTextbox" Width="100" TextChanged="TextColoTextbox_TextChanged" ></TextBox>
                        <Button Click="Button_Click" >Выбрать</Button>
                    </StackPanel>


                    <StackPanel Orientation="Horizontal" Margin="0,10,0,10" >
                        <Label Content="Цвет фона приложения:" Width="200" ></Label>
                        <TextBox   x:Name="BackGroundTextBox" Width="100" TextChanged="BackGroundTextBox_TextChanged"></TextBox>
                        <Button  >Выбрать</Button>
                    </StackPanel>


                    <StackPanel Orientation="Horizontal">
                        <Label   Content="Цвет обводки изображения:" Width="200"></Label>
                        <TextBox x:Name="ImageBorderColorTextBox"  Width="100" TextChanged="ImageBorderColorTextBox_TextChanged"></TextBox>
                        <Button  >Выбрать</Button>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                        <Label   Content="Цвет обьектов при наведении:" Width="200"></Label>
                        <TextBox  x:Name="MouseOverColorTextBox" Width="100" TextChanged="MouseOverColorTextBox_TextChanged"></TextBox>
                        <Button  >Выбрать</Button>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                        <Label    Content="Цвет кнопок:" Width="200"></Label>
                        <TextBox  x:Name="TextBoxAndButtonColorTextbox"  Width="100" TextChanged="TextboxColorAndButtonColorTextbox_TextChanged" ></TextBox>
                        <Button Click="Button_Click" >Выбрать</Button>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                        <Label    Content="Цвет текста кнопок плеера:" Width="200"></Label>
                        <TextBox  x:Name="PlayerButtonTextColorTextBox"  Width="100" TextChanged="PlayerButtonTextColorTextBox_TextChanged" ></TextBox>
                        <Button Click="Button_Click" >Выбрать</Button>
                    </StackPanel>
                   




                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                        <Label   Content="Цвет контролов" Width="200"></Label>
                        <TextBox   x:Name="ControlColorTextbox" Width="100" TextChanged="ControlColorTextbox_TextChanged"></TextBox>
                        <Button  >Выбрать</Button>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                        <Label   Content="Цвет слайдеров" Width="200"></Label>
                        <TextBox  x:Name="SliderColorsTextBox" Width="100" TextChanged="SliderColorsTextBox_TextChanged"></TextBox>
                        <Button  >Выбрать</Button>
                    </StackPanel>


                </StackPanel>





            </StackPanel>
        </ScrollViewer>

    </Grid>
</Window>
