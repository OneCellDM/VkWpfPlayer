<Page x:Class="VkWpfPlayer.CurrentPlaylistPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VkWpfPlayer"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CurrentPlaylistPage">

    <Grid>
        <ListView   ItemContainerStyle="{DynamicResource ResourceKey= AudioListItemContainerStyle}" ItemTemplate="{DynamicResource ResourceKey=AudioListTeamplate}" 
                  VirtualizingPanel.VirtualizationMode="Recycling" 
                    VirtualizingPanel.ScrollUnit="Pixel"
                  x:Name="AudioListView" Margin="0,0,0,-0.4" Background="{x:Null}" BorderBrush="{x:Null}" SelectionChanged="AudioListView_SelectionChanged"/>

    </Grid>
</Page>
