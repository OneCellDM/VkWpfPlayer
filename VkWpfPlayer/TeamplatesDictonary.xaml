<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:VkWpfPlayer"
                    x:Class="VkWpfPlayer.TeamplatesDictonary">

    <BitmapImage x:Key="Musicico" UriSource="Resources/MusicIcon.jpg" />

    <local:DurationConverter x:Name="DConverters" x:Key="Dconverter" />
    <local:ImageConverter x:Name="Imageconv" x:Key="ImageC"></local:ImageConverter>
   
    <local:ListviewSizeConverter x:Key="LSizeConverter"></local:ListviewSizeConverter>

    <ItemsPanelTemplate x:Key="WrapPanelTeamplate">
        <WrapPanel Orientation="Horizontal" />
    </ItemsPanelTemplate>
    <SolidColorBrush x:Key="VkBlueColor" Color="#4A76A8"></SolidColorBrush>
    <SolidColorBrush x:Key="VkButtonColor" Color="#EDEEF0"></SolidColorBrush>
    <SolidColorBrush x:Key="VkTextBoxColor" Color="#EDEEF0"></SolidColorBrush>
    <SolidColorBrush x:Key="VkButtonClickColor" Color="#FFA8A7A7"></SolidColorBrush>

    <Style TargetType="{x:Type Button}" x:Key="PlayerButtonStyle">
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="Background" Value="#4A76A8"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="Width" Value="40"/>
        <Setter Property="Height" Value="40"/>
        <Setter Property="Margin" Value="10,0,0,0"/>
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="FontFamily" Value="./Resources/#Segoe MDL2 Assets"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate  TargetType="Button">
                    <Border CornerRadius="80" BorderThickness="1" BorderBrush="{TemplateBinding BorderBrush}" Background="{TemplateBinding Background}" >
                        <ContentPresenter Margin="0" VerticalAlignment="Center" HorizontalAlignment="Center" Content="{TemplateBinding Content}"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#365477"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
   
    
    <Style TargetType="TextBox" x:Key="TextBoxStyleRect">
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Setter Property="Background" Value="{StaticResource VkTextBoxColor}"/>
        <Setter Property="Foreground" Value="Black"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate  TargetType="TextBox">
                    <Border CornerRadius="10" BorderThickness="1" BorderBrush="{TemplateBinding BorderBrush}" Background="{TemplateBinding Background}" >
                        <ContentPresenter Margin="2,0,0,0" VerticalAlignment="Center" x:Name="ContentData" Content="{TemplateBinding Text}"></ContentPresenter>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseCaptured" Value="True">
                            <Setter Property="BorderBrush" Value="{StaticResource VkBlueColor}"/>

                        </Trigger>
                        <Trigger Property="IsKeyboardFocused" Value="True">
                            <Setter Property="BorderBrush" Value="{StaticResource VkBlueColor}"/>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="BorderBrush" Value="{StaticResource VkBlueColor}"></Setter>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style  TargetType="{x:Type Button}" x:Key="ButtonStyleRect"  >
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Setter Property="Background" Value="{StaticResource VkButtonColor}"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="Foreground" Value="Black" />
        <Setter Property="FontSize" Value="15" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate  TargetType="Button">
                    <Border CornerRadius="10" BorderThickness="1" BorderBrush="{TemplateBinding BorderBrush}" Background="{TemplateBinding Background}" >
                        <ContentPresenter Margin="2" x:Name="MyContentPresenter" Content="{TemplateBinding Content}" HorizontalAlignment="Center"  VerticalAlignment="Center" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseCaptured" Value="True">
                            <Setter Property="Background" Value="{StaticResource ResourceKey=VkButtonClickColor}"/>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="BorderBrush" Value="{StaticResource VkBlueColor}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
                
            </Setter.Value>
            
        </Setter>
    </Style>

    <DataTemplate x:Key="AudioListTeamplate">
        

        <Grid   Width= "{Binding ActualWidth, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=ListView},Converter={StaticResource LSizeConverter}}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
                <ColumnDefinition Width="1*"></ColumnDefinition>
                <ColumnDefinition Width="30"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            
            <Rectangle  x:Name="Imыg" Width="50" Height="50" RadiusX="60" RadiusY="60" >
                <Rectangle.Fill>
                    <ImageBrush ImageSource=
                        
                               "{Binding AsyncImageProperty, IsAsync=True, Mode=OneWay,
                                FallbackValue={StaticResource Musicico}, 
                                TargetNullValue={StaticResource Musicico}}" >



                    </ImageBrush>
                </Rectangle.Fill>


            </Rectangle>


            <StackPanel Grid.Column="1" HorizontalAlignment="Stretch"   Margin="10,0,0,0" VerticalAlignment="Center">
                <TextBlock Text="{Binding Title}" Foreground="Black" FontWeight="Bold"></TextBlock>
                <TextBlock Text="{Binding Artist}" Foreground="Black"></TextBlock>
            </StackPanel>

            <TextBlock Grid.Column="2" VerticalAlignment="Center"   HorizontalAlignment="Stretch" Text="{Binding DurationSeconds,Converter={StaticResource Dconverter} }" Foreground="Black"></TextBlock>
        </Grid>
    </DataTemplate>

    <DataTemplate x:Key="AlbumListTeamplate">
        <StackPanel  Margin="5,0">


            <Rectangle  x:Name="Imыg" Width="120" Height="120" RadiusX="60" RadiusY="60" >
                <Rectangle.Fill>
                    <ImageBrush ImageSource=
                        
                               "{Binding AsyncImageProperty, IsAsync=True, Mode=OneWay,
                                FallbackValue={StaticResource Musicico}, 
                                TargetNullValue={StaticResource Musicico}}" >
                           
                        

                    </ImageBrush>
                </Rectangle.Fill>


            </Rectangle>



            <TextBlock  Width="120" Height="40"  TextAlignment="Center"  TextWrapping="Wrap"  VerticalAlignment="Center" Text="{Binding Title}"     FontWeight="Bold"></TextBlock>
        </StackPanel>
    </DataTemplate>
</ResourceDictionary>