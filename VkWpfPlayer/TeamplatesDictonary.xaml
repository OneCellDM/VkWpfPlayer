<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:VkWpfPlayer"
                    x:Class="VkWpfPlayer.TeamplatesDictonary">

    <BitmapImage x:Key="Musicico" UriSource="Resources/MusicIcon.jpg" />

    <local:DurationConverter x:Name="DConverters" x:Key="Dconverter" />
   
    <local:ListviewSizeConverter x:Key="LSizeConverter"></local:ListviewSizeConverter>

    <ItemsPanelTemplate x:Key="WrapPanelTeamplate">
        <WrapPanel Orientation="Horizontal" />
    </ItemsPanelTemplate>

    <DataTemplate x:Key="AudioListTeamplate">

        <Grid   Width= "{Binding ActualWidth, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=ListView},Converter={StaticResource LSizeConverter}}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
                <ColumnDefinition Width="1*"></ColumnDefinition>
                <ColumnDefinition Width="30"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Border Grid.Column="0" CornerRadius="5" Width="50" Height="50">
                <Border.Background>
                    <ImageBrush ImageSource="{Binding ImageUrl,  
                                TargetNullValue={StaticResource Musicico}, 
                                FallbackValue={StaticResource Musicico}, IsAsync=True}" />
                </Border.Background>
            </Border>
            <StackPanel Grid.Column="1" HorizontalAlignment="Stretch"   Margin="5,0,0,0" VerticalAlignment="Center">
                <TextBlock Text="{Binding Title}" Foreground="Black" FontWeight="Bold"></TextBlock>
                <TextBlock Text="{Binding Artist}" Foreground="Black"></TextBlock>
            </StackPanel>
            <TextBlock Grid.Column="2"   HorizontalAlignment="Stretch" Text="{Binding DurationSeconds,Converter={StaticResource Dconverter} }" Foreground="Black"></TextBlock>
        </Grid>
    </DataTemplate>

    <DataTemplate x:Key="AlbumListTeamplate">
        <StackPanel Margin="5,0">
            <Border CornerRadius="10" Width="120" Height="120">

                <Border.Background>
                    <ImageBrush ImageSource="{Binding ImageUrl, TargetNullValue={StaticResource Musicico}, 
                                FallbackValue={StaticResource Musicico}, IsAsync=True}"> 
                    </ImageBrush>
                </Border.Background>
            </Border>
            <TextBlock  Width="100" HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Binding Title}"     FontWeight="Bold"></TextBlock>
        </StackPanel>
    </DataTemplate>
</ResourceDictionary>